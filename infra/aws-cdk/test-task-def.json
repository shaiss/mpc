{
  "family": "mpc-node-test",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::311843862895:role/ecsTaskExecutionRoleMpcTest",
  "containerDefinitions": [
    {
      "name": "mpc-node",
      "image": "nearone/mpc-node-gcp:testnet-release",
      "essential": true,
      "environment": [
        {"name": "RUST_BACKTRACE", "value": "full"},
        {"name": "RUST_LOG", "value": "mpc=debug,info"},
        {"name": "MPC_HOME_DIR", "value": "/tmp"},
        {"name": "MPC_ENV", "value": "mpc-localnet"},
        {"name": "MPC_CONTRACT_ID", "value": "v1.signer.node0"},
        {"name": "MPC_ACCOUNT_ID", "value": "mpc-node-0.node0"},
        {"name": "MPC_LOCAL_ADDRESS", "value": "node-0.mpc.local"},
        {"name": "MPC_RESPONDER_ID", "value": "mpc-node-0.node0"},
        {"name": "NEAR_RPC_URL", "value": "http://10.0.5.132:3030"},
        {"name": "NEAR_BOOT_NODES", "value": "ed25519:7PGseFbWxvYVgZ89K1uTJKYoKetWs7BJtbyXDzfbAcqX@10.0.5.132:24567"}
      ],
      "secrets": [
        {
          "name": "MPC_ACCOUNT_SK",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:311843862895:secret:mpc-node-0-mpc_account_sk-2ZH2i8"
        },
        {
          "name": "MPC_P2P_PRIVATE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:311843862895:secret:mpc-node-0-mpc_p2p_private_key-0GKmQZ"
        },
        {
          "name": "MPC_SECRET_STORE_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:311843862895:secret:mpc-node-0-mpc_secret_store_key-lm1aYg"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mpc-test",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "mpc-node-0",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}

